/* === ОБОЛОЧКА === */
.wrapper {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color: var(--text-primary);
  font-family: system-ui, sans-serif;
}

/* === HERO === */
.hero {
  position: relative;
  flex: 1;
  overflow: hidden;
}

.videoBg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
}

.heroInner {
  position: relative;
  z-index: 10;
  display: grid;
  grid-template-columns: 1fr 1fr; /* две колонки как раньше */
  align-items: center;
  gap: 40px;
  padding: 140px 20px 60px;
  max-width: 1200px;
  margin: 0 auto;
}


/* === ЛЕВАЯ ЧАСТЬ HERO === */
.heroLeft {}

.heroBox {
  background: var(--card-background, rgba(255, 255, 255, 0.82));
  padding: 50px;
  border-radius: 28px;
  box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
  backdrop-filter: blur(8px);
}

.heroTitle {
  font-size: 54px;
  font-weight: 800;
  line-height: 1.1;
  color: var(--text-primary, #111);
}

.heroTitle span { display: block; }
.orange { color: #e66400; }
.green { color: var(--primary, #0a8a2a); }

.heroSubtitle {
  margin-top: 25px;
  font-size: 20px;
  color: var(--text-secondary, #444);
}

/* === СЛАЙДЕР === */
.slider { margin-top: 30px; }

.slideRow {
  display: flex;
  gap: 20px;
  align-items: center;
}

.slideImg {
  width: 85px;
  height: 85px;
  border-radius: 14px;
  object-fit: cover;
  background: #ddd;
}

.slideText {
  font-size: 15px;
  color: var(--text-secondary, #444);
  line-height: 1.45;
}

.sliderNav {
  margin-top: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slideIndex {
  color: var(--primary, #c25400);
  font-weight: 600;
}

.sliderButtons { display: flex; gap: 15px; }

.navBtn {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: 3px solid var(--primary, #c25400);
  background: transparent;
  color: var(--primary, #c25400);
  font-size: 26px;
  cursor: pointer;
  transition: 0.2s;
}

.navBtn:hover { background: rgba(255, 247, 236, 0.8); }
.navBtn:active { transform: scale(0.9); }

/* === ПРАВАЯ ЧАСТЬ (СТАТИСТИКА + КАТЕГОРИИ) === */
.rightSide {}

.sectionTitle {
  font-size: 32px;
  font-weight: 800;
  color: var(--text-primary);
  text-shadow: 0 2px 10px rgba(0,0,0,0.35);
  margin-bottom: 25px;
}

/* === СТАТИСТИКА === */
.stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 18px;
  margin-bottom: 40px;
}

.statCard {
  background: var(--card-background, rgba(255, 255, 255, 0.9));
  padding: 22px;
  border-radius: 18px;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0,0,0,0.15);
}

.statNumber {
  font-size: 34px;
  font-weight: 800;
  color: var(--primary, #0a8a2a);
  margin-bottom: 10px;
}

.statLabel {
  color: var(--text-secondary, #555);
  font-size: 15px;
}

/* === КАТЕГОРИИ === */
.categories {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18px;
}

.categoryCard {
  background: var(--card-background, rgba(255, 255, 255, 0.92));
  padding: 30px;
  border-radius: 20px;
  text-decoration: none;
  color: var(--text-primary, #222);
  box-shadow: 0 5px 25px rgba(0,0,0,0.15);
  transition: 0.3s;
}

.categoryCard:hover {
  transform: translateY(-6px);
  border: 2px solid var(--primary, #0a8a2a);
}

.categoryCard h3 {
  font-size: 22px;
  margin-bottom: 10px;
}

.categoryCard p {
  font-size: 15px;
  color: var(--text-secondary, #555);
}

/* === ФУТЕР === */
.footer {
  background: linear-gradient(to top, var(--background-tertiary, #f3f3f3), var(--background, white));
  border-top: 1px solid #ddd;
  padding: 60px 30px;
}

.footerInner {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.footerInner h3 {
  font-size: 20px;
  margin-bottom: 10px;
  color: var(--text-primary, #222);
}

.footerInner p {
  color: var(--text-secondary, #555);
  margin: 4px 0;
}

.footerRight { text-align: right; }

.support {
  display: inline-block;
  background: #ffe5c7;
  color: #c25400;
  padding: 8px 18px;
  border-radius: 40px;
  font-size: 14px;
  margin-bottom: 20px;
  font-weight: 600;
}



@media (max-width: 1400px) {
  .heroTitle {
    font-size: 46px;
  }

  .heroInner {
    gap: 30px;
    padding: 120px 20px 50px;
  }
}


@media (max-width: 1024px) {
  .heroInner {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .heroBox {
    margin: 0 auto;
    padding: 40px;
  }

  .heroTitle {
    font-size: 40px;
  }

  .stats {
    grid-template-columns: repeat(2, 1fr);
    gap: 14px;
  }

  .categories {
    grid-template-columns: 1fr;
  }

  .footerInner {
    grid-template-columns: 1fr 1fr;
    gap: 30px;
  }
}


@media (max-width: 420px) {
  .heroBox {
    padding: 28px;
    border-radius: 20px;
  }

  .heroTitle {
    font-size: 32px;
  }

  .heroSubtitle {
    font-size: 16px;
  }

  .slideImg {
    width: 68px;
    height: 68px;
  }

  .sliderButtons .navBtn {
    width: 40px;
    height: 40px;
    font-size: 20px;
  }

  .stats {
    grid-template-columns: 1fr;
  }

  .statNumber {
    font-size: 26px;
  }

  .categories {
    grid-template-columns: 1fr;
    gap: 14px;
  }

  .footerInner {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .footerRight {
    text-align: center;
    margin-top: 20px;
  }
}
